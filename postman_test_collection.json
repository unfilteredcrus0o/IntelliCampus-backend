{
  "info": {
    "name": "Roadmap Security Testing",
    "description": "Test roadmap-user associations and security",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000"
    },
    {
      "key": "user_a_token",
      "value": ""
    },
    {
      "key": "user_b_token", 
      "value": ""
    },
    {
      "key": "roadmap_id",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "1. Register User A",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"name\": \"Alice Test\",\n    \"email\": \"alice@test.com\",\n    \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/register",
          "host": ["{{base_url}}"],
          "path": ["auth", "register"]
        }
      }
    },
    {
      "name": "2. Login User A",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"email\": \"alice@test.com\",\n    \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/login",
          "host": ["{{base_url}}"],
          "path": ["auth", "login"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    const response = pm.response.json();",
              "    pm.collectionVariables.set('user_a_token', response.access_token);",
              "    console.log('User A token saved');",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "3. Create Roadmap (User A)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{user_a_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"selectedTopics\": [\"Python\", \"FastAPI\"],\n    \"skillLevel\": \"beginner\",\n    \"duration\": \"7 days\",\n    \"title\": \"Alice's Security Test Roadmap\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/roadmap/create",
          "host": ["{{base_url}}"],
          "path": ["api", "roadmap", "create"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    const response = pm.response.json();",
              "    pm.collectionVariables.set('roadmap_id', response.roadmap_id);",
              "    console.log('Roadmap ID saved: ' + response.roadmap_id);",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "4. Get Roadmap (User A - Should Work)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{user_a_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/roadmap/{{roadmap_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "roadmap", "{{roadmap_id}}"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('User A can access own roadmap', function () {",
              "    pm.response.to.have.status(200);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "5. Register User B",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"name\": \"Bob Test\",\n    \"email\": \"bob@test.com\",\n    \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/register",
          "host": ["{{base_url}}"],
          "path": ["auth", "register"]
        }
      }
    },
    {
      "name": "6. Login User B",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"email\": \"bob@test.com\",\n    \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/login",
          "host": ["{{base_url}}"],
          "path": ["auth", "login"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    const response = pm.response.json();",
              "    pm.collectionVariables.set('user_b_token', response.access_token);",
              "    console.log('User B token saved');",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "7. Get Roadmap (User B - Should Fail)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{user_b_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/roadmap/{{roadmap_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "roadmap", "{{roadmap_id}}"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('User B cannot access User A roadmap', function () {",
              "    pm.response.to.have.status(404);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "8. Get Roadmap (No Auth - Should Fail)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/roadmap/{{roadmap_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "roadmap", "{{roadmap_id}}"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Unauthenticated request fails', function () {",
              "    pm.response.to.have.status(401);",
              "});"
            ]
          }
        }
      ]
    }
  ]
}